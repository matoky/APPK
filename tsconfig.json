{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", 
    "strict": true, 
    "jsx": "react", 
    "moduleResolution": "node", 
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "extends": "expo/tsconfig.base", 
  "include": ["src"], 
  "exclude": ["node_modules"] 
}
